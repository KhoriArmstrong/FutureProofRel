<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.teamwagdin.owner.futureproofrel.HomePageActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:text="I&apos;m screen 1: Home Page "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_weight="0.05" />


    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Click me I'm screen 2: Entry Tracker"
        android:layout_weight="0.08" />
    <Button
        android:id="@+id/button2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Click me I'm screen 3: Login and Register"
        android:layout_weight="0.08" />
    <Button
        android:id="@+id/button3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Click me I'm screen 4: Entry Alarm"
        android:layout_weight="0.08" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User A"
        android:onClick="LoginUserA"
        android:id="@+id/button6"
        android:layout_weight="0.05"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User B"
        android:onClick="LoginUserB"
        android:id="@+id/button7"
        android:layout_gravity="right"
        android:layout_weight="0.05" />


</LinearLayout>
